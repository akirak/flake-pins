{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "labels": [
    "automation",
    "dependencies"
  ],
  "packageRules": [
    {
      "matchManagers": ["github-actions"],
      "groupName": "actions",
      "separateMajorMinor": false,
      "automerge": true
    }
  ],
  "automergeSchedule": [
    "before 7pm"
  ],
  "github-actions": {
    "enabled": true
  }
}
